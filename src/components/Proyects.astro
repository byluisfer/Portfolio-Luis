<script>
  document.addEventListener("DOMContentLoaded", async () => {
  
    const { gsap } = await import("gsap");
    const { ScrollTrigger } = await import("gsap/ScrollTrigger");
    gsap.registerPlugin(ScrollTrigger);

    // Select all the cards
    document.querySelectorAll(".proyectoCard").forEach((card) => {
      gsap.to(card, {
        scrollTrigger: {
          trigger: card,
          start: "top 180%",
          end: "center center",
          scrub: 3,
        },
        scale: 1,
        translateY: 0,
        rotateX: 0,
        duration: 2.5,
        ease: "power2.out",
      });
    });
  });
</script>

