<script>
  document.addEventListener("DOMContentLoaded", () => {
    if (window.innerWidth > 768) {
      import("gsap").then(({ gsap }) => {
        import("gsap/ScrollTrigger").then(({ ScrollTrigger }) => {
          gsap.registerPlugin(ScrollTrigger);

          document.querySelectorAll(".proyectoCard").forEach((card) => {
            gsap.to(card, {
              scrollTrigger: {
                trigger: card,
                start: "top 180%",
                end: "center center",
                scrub: 3,
              },
              scale: 1,
              translateY: 0,
              rotateX: 0,
              duration: 2.5,
              ease: "power2.out",
            });
          });
        });
      });
    }
  });
</script>

