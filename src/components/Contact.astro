---
import ContactForm from './ContactForm.astro';
---

<section id="Contact" class="mt-20 sm:mt-28">
    <div class="relative text-white flex flex-col items-center justify-center">
        <h3 class="text-base sm:text-lg font-InterTight tracking-widest text-white drop-shadow-[0_0_6px_rgba(255,255,255,0.8)] items-center">
          <span class="mr-3">✦</span>
            KONTAKT
          <span class="ml-3">✦</span>
        </h3>
        
        <h2 class="text-3xl sm:text-5xl font-NyghtSerif mt-4 text-transparent bg-clip-text px-2 bg-gradient-to-b from-white to-accent drop-shadow-[0_0_6px_rgba(255,255,255,0.3 )]">
            Lass uns verbinden!
        </h2>
    </div>

  <div class="contact-info relative p-6 sm:p-8 md:p-12 font-MonaSans text-center bg-nose border-2 border-navbarBorder rounded-3xl text-white mt-16">
      <p id="contact-info-text" class="text-left text-base sm:text-lg md:text-xl">Kontaktieren Sie mich</p>
      <h3 id="contact-prompt" class="text-xl sm:text-xl md:text-2xl lg:text-4xl mt-3 font-bold text-left mb-4">
          <p class="contact-message">
            Haben Sie eine Frage, <br>
            eine Idee oder ein Projekt, <br>
            bei dem Sie Hilfe benötigen? <br>
            Kontaktieren Sie mich!</p>
      </h3>
  </div>

  <div class="mt-5 w-full max-w-6xl mx-auto text-left">
      <ContactForm />
  </div>
</section>